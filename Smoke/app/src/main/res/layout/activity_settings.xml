<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="org.purple.smoke.Settings">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/neighbors_layout">

                    <TextView
                        android:text="@string/neighbors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp" />

                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/neighbors" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="@string/delete_neighbor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:id="@+id/delete_neighbor" />

                        <Button
                            android:text="@string/refresh_neighbors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:id="@+id/refresh_neighbors" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/neighbor_ip_address"
                            android:hint="@string/ip_address" />

                        <EditText
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/neighbor_port"
                            android:hint="@string/port" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/neighbor_scope_id"
                            android:layout_weight="1"
                            android:hint="@string/ipv6_scope_id" />
                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:checkedButton="@+id/neighbor_ipv4"
                        android:orientation="horizontal"
                        android:id="@+id/neighbors_ipv_radio_group">

                        <RadioButton
                            android:text="@string/ipv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/neighbor_ipv4"
                            android:layout_weight="1"
                            android:checked="true" />

                        <RadioButton
                            android:text="@string/ipv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/neighbor_ipv6"
                            android:layout_weight="1" />

                    </RadioGroup>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="@string/add_neighbor"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/add_neighbor"
                            style="@style/Widget.AppCompat.Button.Colored" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/reset_neighbor_fields"
                            android:text="@string/reset_fields"
                            style="@style/Widget.AppCompat.Button.Colored" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
