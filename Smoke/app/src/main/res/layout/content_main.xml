<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.purple.smoke.Main"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/clear_chat_messages"
        android:layout_toStartOf="@+id/clear_chat_messages" />

    <Button
        android:text="@string/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_chat_messages"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/refresh_chat_participants"
        android:layout_toStartOf="@+id/refresh_chat_participants" />

    <Button
        android:text="@string/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresh_chat_participants"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_chat_messages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chat_messages"
        android:layout_toStartOf="@+id/refresh_chat_participants"
        android:layout_above="@+id/chat_message"
        android:layout_toLeftOf="@+id/refresh_chat_participants" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chat_message"
        android:hint="@string/please_type_a_message"
        android:layout_toLeftOf="@+id/send_chat_message"
        android:layout_toStartOf="@+id/send_chat_message" />

    <Button
        android:text="@string/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/chat_messages"
        android:layout_toEndOf="@+id/chat_messages"
        android:id="@+id/send_chat_message" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/clear_chat_messages"
        android:layout_below="@+id/clear_chat_messages"
        android:layout_above="@+id/chat_message"
        android:layout_toRightOf="@+id/clear_chat_messages" />
</RelativeLayout>
