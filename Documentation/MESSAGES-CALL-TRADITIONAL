[PK] (1)
{
	AES-256 Key (1)
	SHA-512 Key (2)
	Sender's Identity (3)
	Sender's Public Encryption Key SHA-512 Digest (4)
	Timestamp (5)
	[PK Signature] (6)
	{
		[PK] (1 ... 5) (1)
	}
}

[SHA-512 HMAC] (2)
{
	[PK] (1)
}

/*
** The destination is created via the recipient's SipHash identity.
*/

[Destination SHA-512 HMAC] (3)
{
	[PK] || [SHA-512 HMAC] (1)
}
