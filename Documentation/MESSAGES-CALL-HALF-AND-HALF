[PK] (1)
{
	A Tag (1)						1 Byte
	A Timestamp (2)						8 Bytes
	AES-128 Key (3)						16 Bytes
	SHA-256 Key (4)						32 Bytes
	Sender's Identity (5)					8 Bytes
	Sender's Public Encryption Key SHA-512 Digest (6)	64 Bytes
	[PK Signature] (7)					Variable Bytes
	{
		[PK] (1 ... 5) (1)
	}
}

[Random Bytes] (2)						64 Bytes

/*
** The destination is created via the recipient's SipHash identity.
*/

[Destination SHA-512 HMAC] (3)					64 Bytes
{
	[PK] || [Random Bytes] (1)
}
